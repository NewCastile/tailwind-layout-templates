---
import HamburguerIcon from "../../../icons/HamburguerIcon.astro"
import SectionsPlaceholder from "../../../layout/SectionsPlaceholder.astro"
import Footer from "../../../shared/Footer.astro"
---

<div class="grid min-h-screen w-full grid-cols-1 grid-rows-[auto_1fr_auto]">
	<astro-stacked-header
		id="stacked-header"
		class="flex w-full flex-col items-start justify-start gap-0 border-b border-slate-400 bg-zinc-800 md:grid md:grid-cols-[max-content_1fr] md:gap-8"
	>
		<div class="flex w-full flex-row items-center justify-between p-8">
			<header>
				<h1 class="text-2xl font-bold">Header</h1>
			</header>
			<button
				role="button"
				id="toggle-nav-button"
				aria-expanded="false"
				aria-controls="navigation"
				class="block md:hidden"
			>
				<HamburguerIcon />
			</button>
		</div>
		<div
			class="relative flex w-full flex-col items-end justify-start px-0 sm:px-8 md:h-full md:justify-center"
		>
			<nav
				id="main-navigation"
				class="absolute top-0 flex h-0 w-full flex-col items-start justify-start gap-4 overflow-hidden bg-zinc-800 md:static md:flex md:h-auto md:w-max md:overflow-auto"
			>
				<ul
					class="flex w-full flex-col items-start justify-center gap-4 px-8 sm:px-0 md:w-max md:flex-row md:items-center"
				>
					{
						Array(5)
							.fill("Item #")
							.map((str, idx) => {
								return (
									<li class="w-auto md:w-max">
										<a href="">{`${str}${idx + 1}`}</a>
									</li>
								)
							})
					}
				</ul>
			</nav>
		</div>
	</astro-stacked-header>
	<main>
		<div class="flex w-full flex-col items-center justify-center p-8">
			<SectionsPlaceholder sectionsQuantity={5} />
		</div>
	</main>
	<div class="flex w-full flex-col items-center justify-start">
		<Footer />
	</div>
</div>
<style>
	#main-navigation {
		transition: height 0.2s ease-in-out;
	}
</style>
<script src="./scripts/apply-nav-height.ts"></script>
<script src="./scripts/astro-stacked-header.ts"></script>
